<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/page3"
    tools:context=".page4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The force was so great"
            android:textSize="17.5dp"
            android:textStyle="bold"
            android:fontFamily="serif">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="that his head felt like jelly."
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginEnd="12.5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="He even scraped and"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scuffed up his belly."
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#397F60"
            android:onClick="gotopage3"
            android:text="BACK"
            android:textColor="#EF9E33"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#397F60"
            android:onClick="gotopage5"
            android:text="NEXT"
            android:textColor="#EF9E33"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
