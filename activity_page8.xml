<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/page7"
    tools:context=".page8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Even before  "
            android:id="@+id/Character"
            android:textSize="17.5dp"
            android:textStyle="bold"
            android:fontFamily="serif" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="could speak,"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="All he could see was"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some wool on a beak."
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="serif"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#090909"
            android:onClick="gotopage7"
            android:text="BACK"
            android:textColor="#EF9E33"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#090909"
            android:onClick="gotopage9"
            android:text="NEXT"
            android:textColor="#EF9E33"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
