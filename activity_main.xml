<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/page0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity = "center"
        android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Main Character"
            android:padding="5dp"
            android:id="@+id/MainCharacter"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="15dp"
            android:textSize="17.5dp"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:textStyle="bold"
            android:fontFamily="serif">
        </EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#EF9E33"
            android:onClick="gotopage1"
            android:text="SUBMIT MAIN CHARACTER"
            android:textColor="#397F60"
            android:textSize="17.5dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
